<UserControl x:Class="PokeGoBot.WPF.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeGoBot.WPF.Views"
             xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="true"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="742"
             Loaded="MainView_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#ECECEC" BorderBrush="LightGray" BorderThickness="2" CornerRadius="4" Margin="3">
            
        </Border>
        <TabControl Name="tcMain" Grid.Row="1">
            <TabItem Name="tiGeneral" Header="General">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="5"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TabControl Name="tbLogin">
                            <TabItem Name="tiPTC" Header="PTC">
                                <Grid Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="14">Login Info</TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="0">Username</TextBlock>
                                    <TextBox Name="txtPTCUsername" 
                                             Width="200"
                                             Text="{Binding PtcUser, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
                                             Grid.Row="3" 
                                             Grid.ColumnSpan="2" />
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0">Password</TextBlock>
                                    <PasswordBox Name="txtPTCPassword" 
                                                 Width="200"
                                                 PreviewKeyUp="TxtPTCPassword_OnPreviewKeyUp" 
                                                 Grid.Row="5" 
                                                 Grid.ColumnSpan="2"/>
                                </Grid>
                            </TabItem>
                            <TabItem Name="tiGoogle" Header="Google">
                                <Grid Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="14" Text="Login Info"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Username" />
                                    <TextBox Name="txtGoogleUsername" 
                                             Width="200"
                                             Text="{Binding GoogleUser, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
                                             Grid.Row="3" 
                                             Grid.ColumnSpan="2"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Password"/>
                                    <PasswordBox Name="txtGooglePassword" 
                                                 Width="200"
                                                 PreviewKeyUp="TxtGooglePassword_OnPreviewKeyUp" 
                                                 Grid.Row="5" 
                                                 Grid.ColumnSpan="2" />
                                    
                                </Grid>
                            </TabItem>
                        </TabControl>
                        
                    </Grid>
                    <Border Grid.Column="1"></Border>
                    <Border Grid.Column="2" BorderBrush="Silver" BorderThickness="2">
                        <Button Name="btnStartStop" Command="{Binding StartCommand}" Content="Start"/>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Row="0" ColumnSpan="2">
                        <CheckBox Content="Use PTC" IsChecked="{Binding UsePtc}" Width="80" Margin="5" HorizontalAlignment="Left"/>

                        <CheckBox Content="Use Google" IsChecked="{Binding UseGoogle}" Width="90" Margin="90,5" HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Latitude:"/>
                    <xctk:DoubleUpDown Name="dudLatitude" Value="{Binding Latitude}" Grid.Row="1" Grid.Column="1" Increment="1" />
                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Longitude:"/>
                    <xctk:DoubleUpDown Name="dudLongitude" Value="{Binding Longitude}" Grid.Row="2" Grid.Column="1" Increment="1" />
                    
                    <Grid Grid.Row="3" ColumnSpan="2">
                        <CheckBox Content="Farm pokestops and catch pokemons" IsChecked="{Binding CatchPokemons}" Margin="5"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Map">
                <gmap:GMapControl Name="gmap" CanDragMap="False" />
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch"></GridSplitter>
        <ListBox Name="lbLog" Grid.Row="3"></ListBox>
    </Grid>
</UserControl>
