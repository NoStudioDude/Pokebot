<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:PokeGoBot.WPF.Views"
                    xmlns:vm="clr-namespace:PokeGoBot.WPF.Viewmodels">

    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <v:MainView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:GeneralViewModel}">
        <v:GeneralView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
        <v:ConfigurationView />
    </DataTemplate>

</ResourceDictionary>
